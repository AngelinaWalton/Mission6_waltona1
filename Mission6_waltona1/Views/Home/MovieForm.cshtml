
@{
    ViewData["Title"] = "Movie Form";
}

@model Mission6_waltona1.Models.FormResponse

<h1>This is the Movie Form Application</h1>
    <div>
        <form method="post">
            <label>Category:</label>
            <input asp-for="category" /><br />

            <label>Title:</label>
            <input asp-for="title" /><br />

            <label>Year:</label>
            <input asp-for="year" /><br />

            <label>Director:</label>
            <input asp-for="director" /><br />
           
            <label>Rating:</label>
            <select asp-for="rating">
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select><br />


            <label>Edited:</label>
            <select asp-for="edited">
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select><br />

            <label>Lent To:</label>
            <input asp-for="lent" /><br />

            <label>Notes:</label>
            <input asp-for="notes" /><br />

            <button type="submit">Submit Form</button>
        </form>
    </div>