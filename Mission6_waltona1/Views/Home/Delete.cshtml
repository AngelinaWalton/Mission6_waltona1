
@{
    ViewData["Title"] = "Delete Form";
}

@model FormResponse

<h2>Confirm Deletion</h2>
<h3>Are you sure you want to Delete the Record for @Model.title?</h3>

<form method="post" asp-controller="Home" asp-action="Delete">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="WaitList" class="btn btn-primary">Cancel</a>

    <input type="hidden" asp-for="FormId"/>
</form>